{
  "name": "General Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "npmVersion": "latest"
    },
    "ghcr.io/devcontainers/features/go:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "mounts": [
    "source=${localWorkspaceFolder}/workspace,target=/workspace,type=bind"
  ],
  "workspaceFolder": "/workspace",
  "postCreateCommand": "bash setup.sh",
  "forwardPorts": [4321, 4222, 8222],
  "portsAttributes": {
    "4321": {
      "label": "Astro Dev Server",
      "onAutoForward": "openBrowser"
    },
    "4222": {
      "label": "NATS Server",
      "onAutoForward": "silent"
    },
    "8222": {
      "label": "NATS Monitoring",
      "onAutoForward": "silent"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-vscode.vscode-json",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  },
  "containerEnv": {
    "PRIVATE_STORYBLOK_KEY": "${localEnv:PRIVATE_STORYBLOK_KEY}",
    "PUBLIC_STORYBLOK_PREVIEW": "yes"
  },
  "remoteUser": "vscode"
}
